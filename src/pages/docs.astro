---
import Layout from '../layouts/base.astro';
import { GetStartedSectionWithProvider } from '../components/docs/GetStartedSection';
import { ParameterConfigurationSectionWithProvider } from '../components/docs/ParameterConfigurationSection';
import { CodeExamplesSection } from '../components/docs/CodeExamplesSection';
import { ApiReferenceSection } from '../components/docs/ApiReferenceSection';
import { QueryParamsSection } from '../components/docs/QueryParamsSection';
import { generateAPISchema } from '../lib/seo';
import { DocsSidebar } from '../components/DocsSidebar';
---

<Layout
  title="Documentation"
  description="API documentation for Free LLM Router - access healthy free LLM models from OpenRouter."
  jsonLd={generateAPISchema()}
  showHeader={false}
>
  <!-- DocsSidebar includes its own SiteHeader so the mobile hamburger can toggle the sidebar -->
  <DocsSidebar client:load>
    <div class="container mx-auto max-w-5xl px-4 pt-14 pb-12 space-y-20">
      <GetStartedSectionWithProvider client:load />
      <ParameterConfigurationSectionWithProvider client:load />
      <CodeExamplesSection client:load />
      <ApiReferenceSection client:load />
      <QueryParamsSection client:load />

      <!-- Footer -->
      <footer class="border-t pt-12 text-center text-sm text-muted-foreground">
        <p>
          Model data synced from <a
            href="https://openrouter.ai"
            class="underline hover:text-foreground">OpenRouter</a
          >
        </p>
      </footer>
    </div>
  </DocsSidebar>
</Layout>
