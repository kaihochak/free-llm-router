---
import Layout from '../layouts/base.astro';
import { ModelHeroWithProvider } from '../components/ModelHero';
import { UsageBanner } from '../components/UsageBanner';
import { generateOrganizationSchema, generateWebSiteSchema } from '../lib/seo';
---

<Layout
  title="Models go down. Your app stays up."
  description="Build your MVP with $0 AI costs. A curated list of free LLM models from OpenRouter. One API call, always a working model."
  jsonLd={[generateOrganizationSchema(), generateWebSiteSchema()]}
>
  <!-- Usage Banner -->
  <div class="max-w-5xl mx-auto fixed bottom-4 left-0 right-0 z-40 px-4 py-2">
    <UsageBanner client:load />
  </div>

  <div class="container mx-auto max-w-5xl px-4 py-16">
    <ModelHeroWithProvider client:load />

    <!-- Footer -->
    <footer class="mt-16 pt-8 text-center text-sm text-muted-foreground">
      <p>Data synced from <a href="https://openrouter.ai" class="underline hover:text-foreground">OpenRouter</a></p>
    </footer>
  </div>
</Layout>
