# App connection (RLS enforced) - for user/admin/stats/migration access
DATABASE_URL_OWNER=postgresql://<owner_user>:<owner_password>@<db_host>/<db_name>?sslmode=require
DATABASE_URL=postgresql://<app_user>:<app_password>@<db_host>/<db_name>?sslmode=require
DATABASE_URL_ADMIN=postgresql://<admin_user>:<admin_password>@<db_host>/<db_name>?sslmode=require
DATABASE_URL_STATS=postgresql://<stats_user>:<stats_password>@<db_host>/<db_name>?sslmode=require

# Better Auth Configuration
BETTER_AUTH_URL=http://localhost:4321
BETTER_AUTH_SECRET=your-secret-here  # Generate with: openssl rand -base64 32

# GitHub OAuth (required for authentication)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Demo API key for website (server-only, create via dashboard)
DEMO_API_KEY=fma_your_demo_key_here

# Cloudflare Turnstile
PUBLIC_TURNSTILE_SITE_KEY=your_site_key
TURNSTILE_SECRET_KEY=your_secret_key

# PostHog Analytics
PUBLIC_POSTHOG_KEY=phc_your_project_api_key
PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
